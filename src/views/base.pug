doctype html 
html(lang="ko")
    head 
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body  
        header 
            h1=pageTitle 
            nav    
                ul 
                    li  
                        a(href="/") Home
                    if logedIn 
                        li 
                            a(href="/logout") Log Out
                        li 
                            a(href="/my-profile") #{loggInUser.name}'s Profile
                    else
                        li  
                            a(href="/join") Join
                        li  
                            a(href="/login") Login
                    li  
                        a(href="/search") Search
                    li  
                        a(href="/videos/upload") Upload Video
                    

        main
            block content
    include partials/footer